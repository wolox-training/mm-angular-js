.container
  form.book-search(ng-submit='$ctrl.filterBooks($event)')
    select.custom-select(ng-model='$ctrl.filterType')
      option(value='')
        | Seleccionar filtro
      option(value='title')
        | Nombre
      option(value='author')
        | Autor
    input.search-input(ng-model='$ctrl.filterValue' placeholder='Buscar...')
    button.search-img(type='submit')
  .book-list
    .book(ng-repeat='book in $ctrl.filteredBooks')
      a(ui-sref='navbar.bookDetails({ id: book.id })')
        img.book-cover(ng-src='{{book.image_url}}')
        span.book-title
          | {{book.title}}
        span.book-author
          | {{book.author}}
